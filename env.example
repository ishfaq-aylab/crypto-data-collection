# ðŸ”§ Crypto Data Collection System - Environment Variables
# Copy this file to .env and modify the values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=crypto_trading_data
MONGODB_TIMEOUT=3000
REDIS_URL=redis://localhost:6379
POSTGRES_URL=postgresql://user:pass@localhost:5432/crypto_trading

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=5001
API_DEBUG=false
API_LOG_LEVEL=INFO

# =============================================================================
# COLLECTION CONFIGURATION
# =============================================================================
COLLECTION_DURATION=3600
COLLECTION_POLL_INTERVAL=30
COLLECTION_LOG_LEVEL=INFO
COLLECTION_SHUTDOWN_TIMEOUT=30
COLLECTION_BATCH_SIZE=1000
COLLECTION_FLUSH_INTERVAL=5

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WS_PING_INTERVAL=20
WS_PING_TIMEOUT=10
WS_RECONNECT_DELAY=5
WS_MAX_RECONNECT_ATTEMPTS=10

# =============================================================================
# EXCHANGE API URLS
# =============================================================================
BINANCE_API_URL=https://api.binance.com/api/v3
BYBIT_API_URL=https://api.bybit.com/v5
KRAKEN_API_URL=https://api.kraken.com/0/public
GATE_API_URL=https://api.gateio.ws/api/v4
OKX_API_URL=https://www.okx.com/api/v5

# =============================================================================
# EXCHANGE WEBSOCKET URLS
# =============================================================================
BINANCE_WS_URL=wss://stream.binance.com:9443/ws
BYBIT_WS_URL=wss://stream.bybit.com/v5/public/linear
KRAKEN_WS_URL=wss://ws.kraken.com
GATE_WS_URL=wss://api.gateio.ws/ws/v4
OKX_WS_URL=wss://ws.okx.com:8443/ws/v5/public

# =============================================================================
# EXCHANGE SYMBOLS (comma-separated)
# =============================================================================
BINANCE_SYMBOLS=BTCUSDT,BTCUSDC,BTCBUSD
BYBIT_SYMBOLS=BTCUSDT,BTCUSDC
KRAKEN_SYMBOLS=XBT/USD,XBT/USDC,XBT/USDT,XXBTZUSD
GATE_SYMBOLS=BTC_USDT,BTC_USDC
OKX_SYMBOLS=BTC-USDT,BTC-USDC

# =============================================================================
# EXCHANGE API KEYS (optional for public data)
# =============================================================================
# Uncomment and fill in if you need private data access
# BINANCE_API_KEY=your_binance_api_key_here
# BINANCE_SECRET_KEY=your_binance_secret_key_here
# BYBIT_API_KEY=your_bybit_api_key_here
# BYBIT_SECRET_KEY=your_bybit_secret_key_here
# KRAKEN_API_KEY=your_kraken_api_key_here
# KRAKEN_SECRET_KEY=your_kraken_secret_key_here
# GATE_API_KEY=your_gate_api_key_here
# GATE_SECRET_KEY=your_gate_secret_key_here
# OKX_API_KEY=your_okx_api_key_here
# OKX_SECRET_KEY=your_okx_secret_key_here

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
MONITORING_ENABLED=true
METRICS_INTERVAL=300
LOG_STATS_INTERVAL=600
MAX_MEMORY_USAGE_MB=1000
MAX_CPU_USAGE_PERCENT=80

# =============================================================================
# ERROR HANDLING CONFIGURATION
# =============================================================================
MAX_RETRIES=3
RETRY_DELAY=5
CONNECTION_TIMEOUT=30
MAX_CONSECUTIVE_FAILURES=10
ALERT_ON_FAILURE=true

# =============================================================================
# PRODUCTION SETTINGS (uncomment for production)
# =============================================================================
# API_DEBUG=false
# COLLECTION_LOG_LEVEL=WARNING
# MONITORING_ENABLED=true
# ALERT_ON_FAILURE=true

# =============================================================================
# DEVELOPMENT SETTINGS (uncomment for development)
# =============================================================================
# API_DEBUG=true
# COLLECTION_LOG_LEVEL=DEBUG
# MONITORING_ENABLED=false
# ALERT_ON_FAILURE=false
